{
  "extends": "astro/tsconfigs/strict",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    },
    "strictNullChecks": true,
    "allowJs": true,
    "checkJs": true,
    "noImplicitAny": false,
    "strict": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
